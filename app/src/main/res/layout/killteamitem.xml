<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/ivKillteamInside"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/tvKillteamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivKillteamInside"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="hola" />

    <TextView
        android:id="@+id/tvKillteamDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivKillteamInside"
        app:layout_constraintTop_toBottomOf="@+id/tvKillteamName"
        tools:text="des" />

    <TextView
        android:id="@+id/tvKillteamComp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivKillteamInside"
        app:layout_constraintTop_toBottomOf="@+id/tvKillteamDesc"
        tools:text="des" />

</androidx.constraintlayout.widget.ConstraintLayout>